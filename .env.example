# AI Scam Honeypot Configuration
# Copy this file to .env and fill in your values

# LLM Provider Settings
LLM_PROVIDER=openai  # Options: openai, gemini, ollama
LLM_MODEL=gpt-4
LLM_API_KEY=your_api_key_here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150

# Scam Detection
CONFIDENCE_THRESHOLD=0.85  # 0.0-1.0, higher = fewer false positives
ENABLE_WHITELIST=true

# Engagement Limits
MAX_MESSAGES=15
MAX_DURATION_MINUTES=30
MIN_ENTITIES_FOR_STOP=3

# Persona Settings
ENABLE_CONSISTENCY_CHECK=true
TYPING_DELAY_SECONDS=2.0

# Entity Extraction
ENABLE_NORMALIZATION=true
ENABLE_URL_EXPANSION=true

# Legal & Compliance
ENABLE_LEGAL_DISCLAIMERS=true
ENABLE_PII_MASKING=true
DATA_RETENTION_DAYS=90
JURISDICTION=IN  # Country code

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE_PATH=honeypot.log
